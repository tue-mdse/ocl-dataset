[comment encoding = UTF-8 /]
[module main('http://www.eclipse.org/uml2/5.0.0/UML')/]
[import ::utils /]
[import ::tests /] 

[template public generate(m : Model)]
[comment @main/]
[let path : String = m.getBackendProjectName().concat(m.baseTestPath()).concat('tests/')]
    [m.genTestUtils(path)/]
[/let]
[for (c : Class | m.getClasses())]
    [let path : String = c.getModel().getBackendProjectName().concat(c.getModel().baseTestPath()).concat('tests/')]
        [c.genLogicTests(path)/]
        [c.genPersistenceTests(path)/]
    [/let]

    [let path : String = c.getModel().getWebProjectName().concat(c.getModel().baseTestPath()).concat('tests/')]
        [c.genRestTest(path)/]
    [/let]
[/for]
[/template]

